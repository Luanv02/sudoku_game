            Rectangle:
                size: self.size
                pos: self.pos
        ActionBar:
            ActionView:
                ActionPrevious:
                    app_icon: './imagens/icon.png'
                    title: 'Sudoku'
                    on_release: app.root.current = 'menu'

        BoxLayout:
            id: tela_jogo1
            orientation: 'vertical'
            size_hint_y: 10

            BoxLayout:
                id: tela_jogo2
                size_hint_y: 10
                padding: '13sp', '18sp', '13sp', '58sp'
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '50dp'
                    padding: '10dp'
                    spacing: '10dp'

                    Label:
                        text: 'Tempo: '
                        size_hint_x: None
                        width: self.texture_size[0]

                    Label:
