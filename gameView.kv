<TelaGameOver>
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        Label:
            text: 'Você perdeu'
        Button:
            text: 'Jogar novamente'
            on_release: app.root.current = 'game'
        Button:
            text: 'Voltar ao Menu Principal'      
            on_release: app.root.current = 'menu'

<TelaScore>
    BoxLayout:
        id: score
        orientation: 'vertical'
        size_hint: 1, 1
        canvas:
            Color:
                rgb: 0.130, 0.180, 0.255
            Rectangle:
                size: self.size
                pos: self.pos
        ActionBar:
            ActionView:
